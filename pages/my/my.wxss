/* pages/my/my.wxss */
.header{
	width: 100%;
	height: 421rpx;
	position: relative;
}
.header .h_bg{
	width: 100%;
	height: 421rpx;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
}
.user_tx{
	position: absolute;
	top: 90rpx;
	left: 315rpx;
	border-radius: 50%;
	z-index: 3;
	width: 120rpx;
	height: 120rpx;
}
.user_name{
	position: absolute;
	top: 230rpx;
	width: 100%;
	text-align: center;
	z-index: 3;
	font-size: 36rpx;
	color: #fff;
}
.showbox{
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	margin-top: 15rpx;
	margin-bottom: 57rpx;
}
.show_one{
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size:28rpx;
	font-family:Microsoft YaHei;
	font-weight:400;
	color:rgba(136,136,136,1);
}
.show_num{
	font-size:36rpx;
font-family:Arial;
font-weight:bold;
color:rgba(94,204,194,1);
margin-bottom: 20rpx;
}
.main{
	width: 100%;
	padding: 0 28rpx 48rpx;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
.my_one{
	width: 100%;
	height: 108rpx;
	border-bottom: 1px solid #f0f0f0;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.one_l{
	display: flex;
	align-items: center;
}
.my_o_icon{
	width: 46rpx;
	height: 45rpx;
	margin-right: 25rpx;
	font-size:30px;
	color: #3b3b3b;
	display: flex;
	justify-content: center;
	align-items: center;
}
.my_o_icon image{
	width: 46rpx;
	height: 45rpx;
}
.one_r{
	font-size:26rpx;
	color: #999;
}
.one_r .iconfont{
	font-size:26rpx;
	color: #999;
}
.login{
	width: 100%;
	display: flex;
	justify-content: center;
	padding-bottom: 48rpx;
}
.login_btn{
	width: 290rpx;
	height: 74rpx;
	border-radius: 10rpx;
	background-color: #5ECCC2;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #fff;
	font-size: 30rpx;
	
}